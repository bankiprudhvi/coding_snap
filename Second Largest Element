function secLargest() {
  let first = -Infinity;
  let second = -Infinity;

  arr2.forEach(num => {
    if (num > first) {
      // shift current first to second
      second = first;
      first = num;
    } else if (num > second && num < first) {
      // update second only if between first and second
      second = num;
    }
  });

  return second === -Infinity ? null : second;
}
